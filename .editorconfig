# http://editorconfig.org

root = true

[*]
charset = utf-8
end_of_line = lf
insert_final_newline = true
trim_trailing_whitespace = true
indent_style = space
indent_size = 4

[*.py]
atomic = true
multi_line_output = 5
line_length = 88
combine_as_imports = true
skip = docs,.tox,env
known_first_party = stdimage,tests


[*.{rst,ini}]
indent_style = space
indent_size = 4

[*.{yml,yaml,html,xml,xsl,json}]
indent_style = space
indent_size = 2
